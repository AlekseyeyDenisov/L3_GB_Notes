<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/double_indent">

    <EditText
        android:id="@+id/fragment_details__heading_note_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="@string/tools_heading"
        android:inputType="textMultiLine|text"
        android:minHeight="@dimen/double_indent"
        android:padding="@dimen/single_indent"
        android:textColor="@color/black"
        android:textSize="@dimen/h2"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fragment_details__description_note_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_description"
        android:inputType="textMultiLine"
        android:lines="5"
        android:minHeight="@dimen/min_heading_description"
        android:padding="@dimen/single_indent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/fragment_details__bottom_save_entry_note"
            style="@style/item_button"
            android:src="@drawable/ic_save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/fragment_details__bottom_delete_entry_note"
            style="@style/item_button"
            android:src="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_details__bottom_save_entry_note"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/fragment_details__date_note_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/single_indent"
            android:hint="@string/tools_date"
            android:inputType="date"
            android:padding="@dimen/single_indent"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>

